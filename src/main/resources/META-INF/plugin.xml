    <depends>com.intellij.modules.lang</depends>
    -->

    <extensions defaultExtensionNs="com.intellij">
        <fileTypeFactory implementation="editor.PmmlFileTypeFactory" />
        <fileEditorProvider implementation="editor.PmmlFileEditorProvider" />
    </extensions>

    <actions>
        <!-- Add your actions here -->
    </actions>
</idea-plugin>